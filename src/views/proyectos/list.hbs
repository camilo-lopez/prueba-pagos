<div class="containter p-4">
    <div class="row">
        {{#each proyectos}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        
                            <h3 class="card-title text-uppercase"> 
                               {{nombre}}
                            </h3>
                        
                        <p> {{codigo}}  </p>
                        <a href="/proyecto/delete/{{id}}" class=" btn btn-danger"> Eliminar </a>
                        <a href="/proyecto/edit/{{id}}" class=" btn btn-secondary"> Editar </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay proyectos creados aun.</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>